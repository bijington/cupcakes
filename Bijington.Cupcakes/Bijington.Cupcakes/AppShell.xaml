<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Bijington.Cupcakes.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:Bijington.Cupcakes.Pages"
    Shell.FlyoutBehavior="Disabled"
    Title="Bijington.Cupcakes">

    <TabBar>
        <ShellContent
            Title="Products"
            ContentTemplate="{DataTemplate pages:ProductsPage}"
            Route="Products" />
        
        <ShellContent
            Title="Orders"
            ContentTemplate="{DataTemplate pages:OrdersPage}"
            Route="Orders" />
    </TabBar>

</Shell>
