<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Bijington.Cupcakes.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:ordersPages="clr-namespace:Bijington.Cupcakes.Orders.Pages"
    xmlns:productsPages="clr-namespace:Bijington.Cupcakes.Products.Pages"
    xmlns:settingsPages="clr-namespace:Bijington.Cupcakes.Settings.Pages"
    FlyoutBehavior="Disabled"
    Title="Bijington.Cupcakes">

    <TabBar>
        <ShellContent
            Title="Products"
            ContentTemplate="{DataTemplate productsPages:ProductsPage}" />
        
        <ShellContent
            Title="Orders"
            ContentTemplate="{DataTemplate ordersPages:OrdersPage}" />
        
        <ShellContent
            Title="Settings"
            ContentTemplate="{DataTemplate settingsPages:SettingsPage}" />
    </TabBar>

</Shell>
