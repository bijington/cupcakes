<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Bijington.Cupcakes.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:customersPages="clr-namespace:Bijington.Cupcakes.Customers.Pages"
    xmlns:ordersPages="clr-namespace:Bijington.Cupcakes.Orders.Pages"
    xmlns:productsPages="clr-namespace:Bijington.Cupcakes.Products.Pages"
    xmlns:settingsPages="clr-namespace:Bijington.Cupcakes.Settings.Pages"
    xmlns:analyticsPages="clr-namespace:Bijington.Cupcakes.Analytics.Pages"
    FlyoutBehavior="Disabled"
    Title="Bijington.Cupcakes">

    <TabBar>
        <ShellContent
            Title="Orders"
            Icon="orders.png"
            ContentTemplate="{DataTemplate ordersPages:OrdersPage}" />
        
        <ShellContent
            Title="Products"
            Icon="products.png"
            ContentTemplate="{DataTemplate productsPages:ProductsPage}" />
        
        <ShellContent
            Title="Customers"
            Icon="customers.png"
            ContentTemplate="{DataTemplate customersPages:CustomersPage}" />
        
        <ShellContent
            Title="Analytics"
            Icon="analytics.png"
            ContentTemplate="{DataTemplate analyticsPages:ReportPage}" />
        
        <ShellContent
            Title="Settings"
            Icon="settings.png"
            ContentTemplate="{DataTemplate settingsPages:SettingsPage}" />
    </TabBar>

</Shell>
